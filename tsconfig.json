{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declarationDir": "./dist",
    "rootDir": "./src",
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noEmit": false,
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
